CREATE TABLE users 
(	
	user_id TEXT PRIMARY KEY,
	user_name VARCHAR(255) UNIQUE,
	user_email VARCHAR(60) NOT NULL UNIQUE ,
	user_password VARCHAR(10) NOT NULL

);

